<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_kl.informatik.disco.discowall" >

    <!-- minSdkVersion=3 is required for NDK to work
         [https://developer.android.com/tools/sdk/ndk/index.html#Reqs]
     -->
    <uses-sdk android:minSdkVersion="3" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!-- Permissions: -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- required for listening on tcp port, in order to communicate with netfilter-bridge -->
</manifest>
