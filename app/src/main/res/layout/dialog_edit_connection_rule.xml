<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <!-- App-Icon with Name and Packagename -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".1"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_weight="10">

            <TextView
                android:id="@+id/textView_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_app_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_rule_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".1"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >

        <!-- ============================================================================== -->
        <!--    Connection -->
        <!-- ============================================================================== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!--    Client IP & Port -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_client"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:text="Client" />

            <EditText
                android:id="@+id/editText_client_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ip / hostname"
                android:gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <EditText
                android:id="@+id/editText_client_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:inputType="number"
                android:hint="port"
                />
        </LinearLayout>

        <!--    Server IP & Port -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_server"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:text="Server"
                />

            <EditText
                android:id="@+id/editText_server_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ip / hostname"
                android:gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <EditText
                android:id="@+id/editText_server_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:inputType="number"
                android:hint="port"
                />
        </LinearLayout>

        <!-- ============================================================================== -->
        <!--    Seperator -->
        <!-- ============================================================================== -->

        <!--
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#000000" >
        </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp">
        </LinearLayout>

        <!-- ============================================================================== -->
        <!--    Firewall Rule -->
        <!-- ============================================================================== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firewall Rule"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <!--    Rule Devices -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/textView_rule_devices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Interfaces"
                />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="WLAN"
                    android:id="@+id/checkBox_rule_device_wlan"
                    android:layout_weight="1"
                    />

                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3G / 4G"
                    android:id="@+id/checkBox_rule_device_3g_4g"
                    android:layout_weight="1"
                    />

            </RadioGroup>

        </LinearLayout>


        <!--    Rule Protocol -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/textView_rule_protocol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Protocols"
                />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP"
                    android:id="@+id/checkBox_rule_protocol_tcp"
                    android:layout_weight="1"
                    />

                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="UDP"
                    android:id="@+id/checkBox_rule_protocol_udp"
                    android:layout_weight="1"
                    />

            </RadioGroup>

        </LinearLayout>


        <!--    Rule Policy -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/textView_rule_policy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Policy"
                />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="2.75"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:id="@+id/radioButton_rule_policy_accept"
                    android:layout_weight=".95"
                    />

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Block"
                    android:id="@+id/radioButton_rule_policy_block"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Interactive"
                    android:id="@+id/radioButton_rule_policy_interactive"
                    android:layout_weight=".8"
                    />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button_ok"
            android:layout_weight="0.5" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_cancel"
            android:layout_weight="0.5" />
    </LinearLayout>


</LinearLayout>
